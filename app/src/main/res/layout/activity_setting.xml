<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingActivity">
    <android.support.v7.widget.Toolbar
        app:navigationIcon="@drawable/ic_arrow_back_gray"
        app:title="设置"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </android.support.v7.widget.Toolbar>
    <TextView
        android:padding="@dimen/normal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择配色"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/textPrimary"/>
    <LinearLayout
        android:paddingLeft="@dimen/normal_margin"
        android:paddingRight="@dimen/normal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/theme1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="白色（正在使用）"
            android:gravity="center"
            android:paddingTop="@dimen/normal_margin"
            android:paddingBottom="@dimen/normal_margin"
            android:textColor="@color/content_light"
            android:background="@color/bg_light"
            android:layout_marginRight="@dimen/little_margin"/>
        <TextView
            android:id="@+id/theme2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="黑色"
            android:paddingTop="@dimen/normal_margin"
            android:paddingBottom="@dimen/normal_margin"
            android:textColor="@color/content_theme1"
            android:background="@color/bg_theme1"
            android:layout_marginRight="@dimen/little_margin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/normal_margin"
        android:paddingLeft="@dimen/little_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="@dimen/little_margin"
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="标题字体:26"
            android:textColor="@color/textPrimary"/>
        <SeekBar
            android:id="@+id/sb_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:min="1"
            android:progress="26"
            android:max="30"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="@dimen/little_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_author"
            android:padding="@dimen/little_margin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="作者字体:14"
            android:textColor="@color/textPrimary"/>
        <SeekBar
            android:id="@+id/sb_author"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:min="1"
            android:progress="14"
            android:max="30"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="@dimen/little_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_content"
            android:padding="@dimen/little_margin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="文章内容字体:16"
            android:textColor="@color/textPrimary"/>
        <SeekBar
            android:id="@+id/sb_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:progress="16"
            android:min="1"
            android:max="30"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>